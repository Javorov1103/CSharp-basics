@{
    ViewData["Title"] = "This is book profile";
}
@model Book

<div class="profile-container d-flex">
    <div class="image-container col-sm-3">
        <img src="@Model.CoverImageURL"/>
    </div>
    <div class="info-container col-sm-9">
        <h2>@Model.Title</h2>
        <h3>@Model.Author?.Name</h3>
        <p>@Model.ShortDescription</p>
    </div>

</div>