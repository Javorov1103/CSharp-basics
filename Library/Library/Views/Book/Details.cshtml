@{
    ViewData["Title"] = "This is book profile";
}
@model Book

 <div id="main-content" class="blog-page">
        <div class="container">
            <div class="row clearfix">
                <div class="col-lg-8 col-md-12 offset-md-2">
                    <div class="card single_post">
                        <div class="body">
                            <div class="img-post">
                                <img class="d-block img-fluid mx-auto" src="@Model.CoverImageURL" alt="@Model.Title book cover image">
                            </div>
                            <h3 class="text-center" style="padding: 10px">
                            @Model.Title by  @Model.Author?.Name
                        </h3>
                            <h5 style="margin-top: 30px">@Model.ShortDescription</h5>
                        </div>
                        <div class="btn-container">
                            
                                <a asp-controller="Book"
                                   asp-action="Edit"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-outline-warning">
                                    Edit
                                </a>
                                <a asp-controller="Book"
                                   asp-action="Delete"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-outline-danger" style="margin: 10px">
                                    Delete
                                </a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="confDialog" style="display: none">

    </div>

    <script>
        var dialog = document.getElementById('confDialog')
    </script>