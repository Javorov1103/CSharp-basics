@{
}
@model List<Book>
<h1>My library</h1>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Add", "Book")'">Add new book</button>
<table class="table table-striped">
   <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
     @for (int i = 0; i < @Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author?.Name</td>
                <td>Free</td>
            </tr>
        }
  </tbody>
</table>