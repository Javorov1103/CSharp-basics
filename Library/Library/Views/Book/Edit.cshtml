@{
}
@{
    ViewData["Title"] = "Edit Book";
}
@model Book

<h2>@ViewData["Title"]</h2>
<form method="put">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ShortDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea name="ShortDescription" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="AuthorId" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
        <select asp-for="AuthorId" class="form-select form-select-sm" aria-label=".form-select-sm example">
            @foreach (Author author in ViewBag.Authors)
            {
                <option value="@author.Id">@author.Name</option>
            }
        </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CoverImageURL" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CoverImageURL" class="form-control">
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" asp-controller="Book" asp-action="EditBook" class="btn btn-success" value="Save changes" >
            <a asp-controller="Book"
                   asp-action="Index"
                   class="btn btn-outline-primary" style="margin: 5px">
                    Cancel
                </a>
        </div>
    </div>
</form>